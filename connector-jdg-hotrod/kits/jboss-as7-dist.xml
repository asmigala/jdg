<!--This script builds a zip for Teiid Server Installation -->
<assembly>

    <id>jboss-as7-dist</id>

    <formats>
        <format>zip</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>
    <baseDirectory>kit</baseDirectory>

    <fileSets>
        <fileSet>
            <directory>kits/jboss-as7/modules</directory>
            <outputDirectory>${jbossas-module-root}</outputDirectory>
            <filtered>true</filtered>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
     	<fileSet>
            <directory>kits/jboss-as7/docs</directory>
            <outputDirectory>docs</outputDirectory>
            <filtered>false</filtered>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
     	<fileSet>
            <directory>src/main/rar</directory>
            <outputDirectory>${jbossas-module-root}/org/jboss/teiid/resource-adapter/jdg/hotrod/main</outputDirectory>
            <filtered>false</filtered>
            <includes>
                <include>**/META-INF/**</include>
            </includes>
        </fileSet>        
       <!-- fileSet>
            <directory>${project.build.directory}/rar-unpack</directory>
            <outputDirectory>${jbossas-module-root}/org/jboss/teiid/resource-adapter/infinispan/hotrod/main</outputDirectory>
            <filtered>false</filtered>
            <includes>
                <include>**/connector-jdg-hotrod-${project.version}.jar</include>
                connector-jdg-hotrod-${project.version}.jar
            </includes>
        </fileSet-->        
        <!-- fileSet>
            <directory>${project.build.directory}/rar-unpack</directory>
            <outputDirectory>${jbossas-module-root}/org/jboss/teiid/resource-adapter/infinispan/hotrod/main</outputDirectory>
            <filtered>true</filtered>
            <includes>
                <include>**/META-INF/**</include>
            </includes>
        </fileSet-->

    </fileSets>
    
   
   <dependencySets>
      <dependencySet>
          <outputDirectory>${jbossas-module-root}/org/jboss/teiid/resource-adapter/jdg/hotrod/main</outputDirectory>
          <useTransitiveDependencies>false</useTransitiveDependencies>
          <includes>
              <include>org.jboss.teiid.connectors:connector-jdg-hotrod</include>
          </includes>
      </dependencySet>
  </dependencySets>
   
    
</assembly>
